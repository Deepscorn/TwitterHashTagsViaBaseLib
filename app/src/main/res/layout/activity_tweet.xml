<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tweet_background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_line_color" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="34.3965dp"
        android:paddingTop="40.2165dp">

        <ImageView
            android:id="@+id/profile_image_full"
            android:layout_width="67.734dp"
            android:layout_height="67.734dp" />

        <TextView
            android:id="@+id/authorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24.342dp"
            android:paddingTop="20.634dp"
            android:textColor="@color/blue"
            android:textSize="16.9335sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="34.3965dp"
        android:paddingTop="26.4585dp">

        <TextView
            android:id="@+id/tweet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10.584dp" />

        <View
            android:layout_width="165.1005dp"
            android:layout_height="1dp"
            android:layout_marginTop="10.583dp"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="34.3965dp"
        android:paddingTop="8.466dp">

        <TextView
            android:id="@+id/tweet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10.844dp" />

        <TextView
            android:id="@+id/tweet_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="34.9245dp"
            android:textColor="@color/white"
            android:textSize="10.844dp" />

    </LinearLayout>


</LinearLayout>