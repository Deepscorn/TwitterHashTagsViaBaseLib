<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="59.2665dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_image_normal"
        android:layout_width="45.5085dp"
        android:layout_height="45.5085dp"
        android:paddingLeft="12.7005dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12.7005dp"
        android:paddingTop="8.7005dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13.2285sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tweet_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_color"
            android:textSize="10.6415sp"/>

    </LinearLayout>

</LinearLayout>