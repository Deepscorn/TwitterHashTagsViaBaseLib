<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tweet_background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_line_color" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="111.1245dp"
            android:layout_height="111.1245dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="38.1dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/touch_instinct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="4dp"
            android:text="@string/touch_instinct"
            android:textColor="@color/touch_instinct_text_color"
            android:textSize="20.109sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/we_are_the_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="42.333dp"
            android:paddingRight="42.333dp"
            android:paddingTop="14.9335dp"
            android:text="@string/we_are_the_best"
            android:textColor="@color/white"
            android:textSize="11.6415sp" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="42.333dp"
        android:paddingRight="42.333dp"
        android:paddingTop="17.516dp">

        <ImageButton
            android:id="@+id/call"
            android:layout_width="89.958dp"
            android:layout_height="31.7505dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/call" />

        <ImageButton
            android:id="@+id/mail"
            android:layout_width="89.958dp"
            android:layout_height="31.7505dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/email" />
    </RelativeLayout>


</LinearLayout>